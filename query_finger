#!/usr/bin/env python3

import pprint
import json
import sys
from optparse import OptionParser

finger = "/afs/stacken.kth.se/home/stacken/Private/finger.json"

fd = open(finger, 'r')
data = json.load(fd)

parser = OptionParser()
parser.add_option("-u", "--username",
        dest="username",
        default=None,
        help="Username",
        metavar="USER")
parser.add_option("-f", "--field",
        dest="field",
        default=None,
        help="Select field",
        metavar="FIELD")
(options, args) = parser.parse_args()

if options.username:
    for user in data:
        if user.get('anv√§ndarnamn', None) == options.username:
            if options.field:
                if user.get(options.field, None):
                    print(user[options.field])
                    sys.exit(0)
                else:
                    sys.exit(1)
            else:
                print(user)
                sys.exit(0)

sys.exit(1)
